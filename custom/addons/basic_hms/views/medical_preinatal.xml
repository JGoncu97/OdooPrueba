<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista en árbol -->
    <record id="medical_preinatal_tree_view" model="ir.ui.view">
        <field name="name">medical.preinatal.tree.view</field>
        <field name="model">medical.preinatal</field>
        <field name="arch" type="xml">
            <list string="Controles Prenatales">
                <field name="gestational_weeks" string="Semanas de Gestación" />
                <field name="admission_date" string="Fecha de Ingreso" />
            </list>
        </field>
    </record>

    <!-- Vista en formulario -->
    <record id="medical_medical_preinatal_form_view" model="ir.ui.view">
        <field name="name">medical.preinatal.form.view</field>
        <field name="model">medical.preinatal</field>
        <field name="arch" type="xml">
            <form string="Control Prenatal">
                <sheet>
                    <group>
                        <field name="gestational_weeks" string="Semanas de Gestación" />
                        <field name="admission_date" string="Fecha de Ingreso" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
